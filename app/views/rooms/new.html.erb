<%= form_with model: @room, html: { class: 'FormContainer' } do |form| %>
  <h1>新規登録</h1>
  <div class="form-group">
    <%= form.label :name, "施設名" %>
    <%= form.text_field :name, required: true %>
  </div>
  <div class="form-group">
    <%= form.label :detail, "施設詳細" %>
    <%= form.text_area :detail, required: true %>
  </div>
  <div class="form-group">
    <%= form.label :fee, "料金" %>
    <%= form.number_field :fee, required: true, min: 1 %>
  </div>
  <div class="form-group">
    <%= form.label :address, "住所" %>
    <%= form.text_field :address, required: true %>
  </div>
  <div class="form-group">
  施設画像
  <p class="button2">画像アップロード</p>
  </div>
  
  <div class="form-actions">
    <div class="save-button"><%= form.submit "保存" %></div>
    <div class="cancel-link"><%= link_to "キャンセル", :back %></div>
  </div>
<% end %>

